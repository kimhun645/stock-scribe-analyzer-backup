rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ฟังก์ชันตรวจสอบ authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ฟังก์ชันดึงข้อมูลผู้ใช้ปัจจุบัน
    function getCurrentUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // ฟังก์ชันตรวจสอบ role ของผู้ใช้ปัจจุบัน
    function hasRole(role) {
      return isAuthenticated() && 
             getCurrentUser().role == role;
    }
    
    // ฟังก์ชันตรวจสอบว่าเป็น admin
    function isAdmin() {
      return isAuthenticated() && 
             (getCurrentUser().role == 'admin' || 
              request.auth.token.email.matches('.*@admin\\.'));
    }
    
    // ฟังก์ชันตรวจสอบว่าเป็น manager หรือ admin
    function isManagerOrAdmin() {
      return isAuthenticated() && 
             (getCurrentUser().role in ['admin', 'manager'] || 
              request.auth.token.email.matches('.*@admin\\.'));
    }
    
    // ฟังก์ชันตรวจสอบว่าเป็นเจ้าของข้อมูล
    function isOwner() {
      return isAuthenticated() && 
             resource.data.userId == request.auth.uid;
    }
    
    // ฟังก์ชันตรวจสอบสิทธิ์การเข้าถึงตาม role
    function canRead() {
      return isAuthenticated();
    }
    
    function canWrite() {
      return isAuthenticated() && 
             (getCurrentUser().role in ['admin', 'manager', 'user']);
    }
    
    function canDelete() {
      return isAuthenticated() && 
             (getCurrentUser().role in ['admin', 'manager']);
    }
    
    // ฟังก์ชันตรวจสอบสิทธิ์การจัดการผู้ใช้
    function canManageUsers() {
      return isAuthenticated() && 
             (getCurrentUser().role == 'admin');
    }
    
    // ฟังก์ชันตรวจสอบสิทธิ์การอนุมัติ
    function canApprove() {
      return isAuthenticated() && 
             (getCurrentUser().role in ['admin', 'manager']);
    }
    
    // ฟังก์ชันตรวจสอบสิทธิ์การตั้งค่า
    function canManageSettings() {
      return isAuthenticated() && 
             (getCurrentUser().role == 'admin');
    }
    
    // Products Collection
    match /products/{productId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canDelete();
    }
    
    // Categories Collection
    match /categories/{categoryId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canDelete();
    }
    
    // Suppliers Collection
    match /suppliers/{supplierId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canDelete();
    }
    
    // Stock Movements Collection
    match /movements/{movementId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canDelete();
    }
    
    // Users Collection
    match /users/{userId} {
      allow read: if canRead();
      allow create: if canManageUsers();
      allow update: if canManageUsers() || (isOwner() && getCurrentUser().role != 'admin');
      allow delete: if canManageUsers();
    }
    
    // Budget Requests Collection
    match /budgetRequests/{requestId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite() || isOwner();
      allow delete: if canDelete();
    }
    
    // Approvals Collection
    match /approvals/{approvalId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canApprove();
      allow delete: if isAdmin();
    }
    
    // Approvers Collection
    match /approvers/{approverId} {
      allow read: if canRead();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Requesters Collection
    match /requesters/{requesterId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if isAdmin();
    }
    
    // Account Codes Collection
    match /accountCodes/{codeId} {
      allow read: if canRead();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Access Codes Collection
    match /accessCodes/{codeId} {
      allow read: if canRead();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Approval Logs Collection
    match /approvalLogs/{logId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // App Settings Collection
    match /appSettings/{settingId} {
      allow read: if canRead();
      allow create: if canManageSettings();
      allow update: if canManageSettings();
      allow delete: if canManageSettings();
    }
    
    // Audit Logs Collection
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if canWrite();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Default rule - ป้องกันการเข้าถึงที่ไม่ได้รับอนุญาต
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
